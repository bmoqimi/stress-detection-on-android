<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/background_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <TextView
        android:id="@+id/area_label"
        style="@style/h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/empty" />
    
    <TextView
        android:id="@+id/known_cells_label"
        style="@style/h2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/empty"
        android:layout_below="@id/area_label" />
    
    <ListView
        android:id="@+id/area_cells"
        style="@style/p"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:dividerHeight="1dp"
        android:divider="@color/area_known_cells_divider_color"
        android:layout_below="@id/known_cells_label" />
    
    <Button
        android:id="@+id/area_learn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/area_cells"
        android:text="@string/learn_area" />
    
    <TextView
        android:id="@+id/area_time"
        style="@style/p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/area_learn"
        android:text="@string/empty" />
        
</RelativeLayout>
