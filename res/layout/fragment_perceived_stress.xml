<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/fragment_container"
    android:orientation="vertical" >
    
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	style="@style/background_box"
    	android:orientation="vertical" >

    	<TextView
        	android:id="@+id/fragment_perceived_stress_label"
        	style="@style/h1"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text="@string/title_fragment_perceived_stress" />
    	
    	<GridView 
        	android:id="@+id/fragment_perceived_stress_calendar"
    		style="@style/background_box"
    		android:layout_width="match_parent"
    		android:layout_height="0dp"
    		android:layout_weight="1"
    		android:background="@android:color/transparent"
        	android:horizontalSpacing="1dp"
        	android:verticalSpacing="1dp" />
        
    </LinearLayout>
    
</LinearLayout>